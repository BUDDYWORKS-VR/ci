---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ContentSpelling from "@components/ContentSpelling.astro";
import ContentColors from "@components/ContentColors.astro";
import ContentFormat from "@components/ContentFormat.astro";
import ContentAssoc from "@components/ContentAssoc.astro";
---

<Layout title="Brand Guidelines | BUDDYWORKS">
  <Container>
    <div class="animate space-y-12 py-12">
      <!-- Hero Section -->
      <section>
        <h1 class="text-4xl font-bold text-black dark:text-white mb-6">
          Brand and Design Guidelines
        </h1>
        <div class="space-y-4 text-lg leading-relaxed max-w-2xl">
          <p>
            This page ensures <strong>BUDDYWORKS</strong> is represented
            consistently across all third-party media.
          </p>
          <p>
            Access all official art assets through our 
            <a 
              href="https://drive.google.com/drive/u/1/folders/1nXymwSYpDArC0JUnDkoe5CdwLELewp0-" 
              class="text-[#FDDA0D] hover:underline font-medium"
            >
              Presskit
            </a>.
          </p>
        </div>
      </section>

      <hr class="border-black/10 dark:border-white/10" />

      <!-- Content Sections -->
      <div class="space-y-20">
        <ContentColors />
        <ContentSpelling />
        <ContentFormat />
        <ContentAssoc />
      </div>
    </div>
  </Container>
</Layout>